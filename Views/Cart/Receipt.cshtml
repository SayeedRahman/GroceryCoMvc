@model GroceryCoMvc.Models.Invoice

@{
    ViewBag.Title = "Receipt";
}

<h2>Receipt</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CartItemList[0].Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CartItemList[0].ProductId)
        </th>
				<th>
            @Html.DisplayNameFor(model => model.CartItemList[0].Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CartItemList[0].PricingRuleId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CartItemList[0].Quantity)
        </th>
				<th>
            @Html.DisplayNameFor(model => model.CartItemList[0].Product.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CartItemList[0].Discount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CartItemList[0].Total)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model.CartItemList)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
				<td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PricingRuleId)
        </td>
       			
				@if (item.BoughtQuantity > 0)
				{					
					<td>
						@Html.DisplayFor(modelItem => item.BoughtQuantity)
					</td>	
					}
					else 
					{					
						<td>
							@Html.DisplayFor(modelItem => item.Quantity)
					</td>	           
					}
        
				<td>
            @Html.DisplayFor(modelItem => item.Product.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Discount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
    </tr>
}

</table>
