@model GroceryCoMvc.Models.ShoppingCartVM

@{
	ViewBag.Title = "Index";
	int itemNo = 1;
	int productNo = 1;			
}

<p>
    <h2>@Html.ActionLink("Checkout", "Receipt")</H2>
</p>
<hr />
<h2>
	PRODUCT LIST
</h2>
<table>
    <tr>
        <th>
            No.
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShoppingCartItem.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShoppingCartItem.Product.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShoppingCartItem.Product.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.ProductList)
{
    <tr>
        <td>
            @productNo
						@{
							productNo++;		
						}		
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
				
				<td>
					 @Html.ActionLink("AddToCart", "AddToCart", new { id = item.ProductId })
				</td>					
    </tr>
}

</table>

<hr />
<hr />
<p>
    @Html.ActionLink("Truncate Shopping Cart Items", "Delete")
</p>
<hr />
<h2>SHOPPING CART ITEMS</h2>
<table>
    <tr>
        <th>
            Item No.
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShoppingCartItem.Product.Name)
        </th>       
        <th>
            @Html.DisplayNameFor(model => model.ShoppingCartItem.Product.Price)
        </th>
				<th>
            @Html.DisplayNameFor(model => model.ShoppingCartItem.Quantity)
        </th>
				<th>
            @Html.DisplayNameFor(model => model.ShoppingCartItem.Total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.CartItemList)
{
    <tr>
        <td>
            @itemNo
						@{
	itemNo++;		
						}
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
				<td>
            @Html.DisplayFor(modelItem => item.Product.Price)
        </td>
		
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        
				<td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
    </tr>
}

</table>